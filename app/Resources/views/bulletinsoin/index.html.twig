{% block content %}

<section class="wrapper">
    <div class="table-agile-info">
        <div class="panel panel-default">
            <div class="panel-heading">
                Tous les bulletins de soin
            </div>
            <div class="row w3-res-tb">
                <div class="col-sm-5 m-b-xs">
                    <select class="input-sm form-control w-sm inline v-middle">
                        <option value="0">Par N° Bulletin</option>
                        <option value="1">Delete selected</option>
                        <option value="2">Bulk edit</option>
                        <option value="3">Export</option>
                    </select>
                    <button class="btn btn-sm btn-default">Filtrer</button>
                </div>
                <div class="col-sm-4">
                </div>
                <div class="col-sm-3">
                    <div class="input-group">
                        <input type="text" class="input-sm form-control" placeholder="Search">
                        <span class="input-group-btn">
            <button class="btn btn-sm btn-default" type="button">Chercher</button>
          </span>
                    </div>
                </div>
            </div>
            <div class="table-responsive">
                <table class="table table-striped b-t b-light">
        <thead>
            <tr>
                <th>Id</th>
                <th>N° bord</th>
                <th>Type bord</th>
                <th>Date bord</th>
                <th>Lieu travail</th>
                <th>N° bulletin</th>
                <th>Observation</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for bulletinSoin in bulletinSoins %}
            <tr>
                <td><a href="{{ path('bs_show', { 'id': bulletinSoin.id }) }}">{{ bulletinSoin.id }}</a></td>
                <td>{{ bulletinSoin.numbord }}</td>
                <td>{{ bulletinSoin.typebord }}</td>
                <td>{% if bulletinSoin.datebord %}{{ bulletinSoin.datebord|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ bulletinSoin.lieutravail }}</td>
                <td>{{ bulletinSoin.numbulletin }}</td>
                <td>{{ bulletinSoin.observation }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('bs_show', { 'id': bulletinSoin.id }) }}">Détail</a>
                        </li>
                        <li>
                            <a href="{{ path('bs_edit', { 'id': bulletinSoin.id }) }}">Modifier</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
            </div>
            <footer class="panel-footer">
                <div class="row">

                    <div class="col-sm-5 text-center">
                        <small class="text-muted inline m-t-sm m-b-sm">Page 1/1 </small>
                    </div>
                    <div class="col-sm-7 text-right text-center-xs">
                        <ul class="pagination pagination-sm m-t-none m-b-none">
                            <li><a href=""><i class="fa fa-chevron-left"></i></a></li>
                            <li><a href="">1</a></li>
                            <li><a href=""><i class="fa fa-chevron-right"></i></a></li>
                        </ul>
                    </div>
                </div>
            </footer>
        </div>
    </div>
</section>





{% endblock %}
