{% extends '@ProjectSitepGlobal/Template/layout.html.twig' %}

{% block content %}

    <section class="wrapper">
        <div class="table-agile-info">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Touts les chèques
                </div>
                <div class="row w3-res-tb">

                    <div class="col-sm-4">
                    </div>
                    <div class="col-sm-3">
                        <div class="input-group">
                            <input type="text" class="input-sm form-control" placeholder="Search">
                            <span class="input-group-btn">
            <button class="btn btn-sm btn-default" type="button">Go!</button>
          </span>
                        </div>
                    </div>
                </div>
                <div class="table-responsive">
                    <table class="table table-striped b-t b-light">
        <thead>
            <tr>
                <th>Id</th>
                <th>Numéro du chèque</th>
                <th>Agent</th>
                <th>Date du chèque</th>
                <th>Montant</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for cheque in cheques %}
            <tr>
                <td><a href="{{ path('cheques_show', { 'id': cheque.id }) }}">{{ cheque.id }}</a></td>
                <td>{{ cheque.num }}</td>
                <td>{{ cheque.agent }}</td>
                <td>{% if cheque.datech %}{{ cheque.datech|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ cheque.montant }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('cheques_show', { 'id': cheque.id }) }}">Détail</a>
                        </li>
                        <li>
                            <a href="{{ path('cheques_edit', { 'id': cheque.id }) }}">Modifier</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    </div>
    <footer class="panel-footer">
        <div class="row">

            <div class="col-sm-5 text-center">
                <small class="text-muted inline m-t-sm m-b-sm">Page 1/1</small>
            </div>
            <div class="col-sm-7 text-right text-center-xs">
                <ul class="pagination pagination-sm m-t-none m-b-none">
                    <li><a href=""><i class="fa fa-chevron-left"></i></a></li>
                    <li><a href="">1</a></li>
                    <li><a href=""><i class="fa fa-chevron-right"></i></a></li>
                </ul>
            </div>
        </div>
    </footer>
    </div>
    </div>
    </section>




{% endblock %}
